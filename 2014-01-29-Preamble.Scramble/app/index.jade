doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Foundation 5
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .header
      .row
        .small-12.columns
          h1 Pick Apart a Paragraph
    .row
      .large-10.columns
        textarea(rows=4, placeholder='Paste a paragraph', autofocus=true)
      a.button.round( href="#") Scramble it!
    .row
      .small-10.columns
        #container
          .small-6.columns
            #evens
              h1 Evens
              ul#evens-list
          .small-6.columns
            #odds
              h1 Odds
              ul#odds-list

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/jquery-timing.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')
    script.
      $(document).foundation()

